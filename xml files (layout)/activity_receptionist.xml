<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReceptionistActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/receptionist_title_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome_receptionist"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <Button
            android:id="@+id/edit_patient"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="@string/edit_patient_info" />

        <Button
            android:id="@+id/add_patient"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="@string/add_patient_info" />


        <Button
            android:id="@+id/set_patient_appointment"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="@string/set_patient_appointment" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp" />


        <Button
            android:id="@+id/login_receptionist"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="@string/back_to_login_page" />

    </LinearLayout>
</RelativeLayout>