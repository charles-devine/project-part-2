<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewRecords">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/records_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Patient's Records"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/medical_history_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Patient's Medical History"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/upcm_appt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Patient's Upcoming Appointments"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <Button
            android:id="@+id/back_to_dentist_page"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="back to dentist page" />

    </LinearLayout>

</RelativeLayout>